<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_back"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_delete"/>
    </RelativeLayout>
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:layout_marginTop="@dimen/_7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_white_rounded"
                android:paddingTop="@dimen/_16dp"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_16dp"
                android:paddingEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginEnd="@dimen/_18dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="@dimen/_18dp"
                    app:cardElevation="0dp">
                    <ViewStub
                        android:id="@+id/vs_photo"
                        android:layout="@layout/include_photo_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/vs_document"
                        android:layout="@layout/include_doc_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/vs_video"
                        android:layout="@layout/include_video_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/vs_audio"
                        android:layout="@layout/include_audio_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_preview_content"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_28dp"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_116dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_26dp"
        android:layout_marginStart="@dimen/_22dp"
        android:layout_marginEnd="@dimen/_22dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/preview_recovery"
            android:background="@drawable/bg_recovery"
            android:paddingTop="@dimen/_13dp"
            android:paddingBottom="@dimen/_13dp"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_16dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_recv"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/_6dp"
                app:srcCompat="@drawable/ic_recovery"/>
            <TextView
                android:textSize="@dimen/_16sp"
                android:textColor="@color/white"
                android:id="@+id/tv_recovery_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover"
                android:fontFamily="@font/font_med"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ivSuccess"
            android:background="@drawable/bg_recovery"
            android:paddingTop="@dimen/_13dp"
            android:paddingBottom="@dimen/_13dp"
            android:visibility="gone"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_16dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icSuccess"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/_6dp"
                app:srcCompat="@drawable/ic_recovery"/>
            <TextView
                android:textSize="@dimen/_16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/successful"
                android:fontFamily="@font/font_med"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ic_share"
            android:background="@drawable/bg_recovery"
            android:paddingTop="@dimen/_13dp"
            android:paddingBottom="@dimen/_13dp"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ff1cc440">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_share_icon"
                android:layout_width="@dimen/_34dp"
                android:layout_height="@dimen/_24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/_6dp"
                app:srcCompat="@drawable/ic_preview_share"/>
            <TextView
                android:textSize="@dimen/_16sp"
                android:textColor="@color/white"
                android:id="@+id/ic_share_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:fontFamily="@font/font_med"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
