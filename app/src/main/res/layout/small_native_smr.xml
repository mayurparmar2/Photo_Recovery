<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:minHeight="50dp">
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/ad_media"
            android:background="@color/lightTransparent"
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_114dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_11dp"
            android:layout_toEndOf="@+id/ad_media">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12dp">
                <View
                    android:background="@color/lightTransparent"
                    android:layout_width="@dimen/_46dp"
                    android:layout_height="@dimen/_46dp"/>
                <View
                    android:orientation="vertical"
                    android:background="@color/lightTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_46dp"
                    android:layout_marginStart="@dimen/_11dp"/>
            </LinearLayout>
            <View
                android:orientation="vertical"
                android:background="@color/lightTransparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56dp"/>
        </LinearLayout>
    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
