<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_back"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_back"
                android:layout_marginStart="@dimen/_20dp"
                app:tint="@color/black"/>
            <TextView
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:ellipsize="middle"
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_240dp"
                android:text="@string/documents_recover"
                android:maxLines="1"
                android:fontFamily="@font/font_reg"
                android:layout_marginStart="@dimen/_20dp"/>
            <LinearLayout
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_menu"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_35dp"
                    android:src="@drawable/ic_menu_filter"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:tint="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_selection"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_select_all"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_dslct"
                    android:layout_marginStart="@dimen/_20dp"/>
                <TextView
                    android:textSize="@dimen/_18sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/all_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_select"
                    android:fontFamily="@font/font_med"
                    android:layout_marginStart="@dimen/_10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/_15sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_recover"
                    android:background="@drawable/bg_recovery"
                    android:padding="@dimen/_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recover (01)"
                    android:fontFamily="@font/font_med"
                    android:paddingStart="@dimen/_15dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_20dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_delete"
                    android:layout_width="@dimen/_27dp"
                    android:layout_height="@dimen/_27dp"
                    android:src="@drawable/ic_delete"
                    android:layout_marginEnd="@dimen/_20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_above="@+id/frameLayout"
        android:layout_below="@+id/header">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:visibility="visible"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_10dp"
            android:paddingHorizontal="@dimen/_5dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_error"
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="260dp"
            android:layout_marginTop="@dimen/_100dp"
            android:src="@drawable/ic_no_data"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bnr_native_smr"/>
    </FrameLayout>
</RelativeLayout>
