<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_10dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_slct"
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deselected"
            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_dslct"
            android:tint="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_alignParentStart="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/file_doc"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_toEndOf="@+id/deselected"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_image">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:ellipsize="middle"
                android:id="@+id/docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/docName">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#949191"
                    android:id="@+id/docSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_reg"
                    android:layout_marginEnd="@dimen/_10dp"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#949191"
                    android:id="@+id/docDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_reg"
                    android:layout_marginEnd="@dimen/_10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/deselected"/>
    </RelativeLayout>
</RelativeLayout>
