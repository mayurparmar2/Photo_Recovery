<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_alignParentStart="true"
            app:tint="@color/black"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deep_scan"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_reg"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_toEndOf="@+id/ic_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true">
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/storage_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="@color/gray"
            app:cpb_background_progressbar_width="9dp"
            app:cpb_progress="0"
            app:cpb_progress_max="100"
            app:cpb_progressbar_color="#3654fb"
            app:cpb_progressbar_width="9dp"
            app:cpb_round_border="true"
            app:cpb_start_angle="270"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/scanning_doc"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/junkSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_below="@+id/lay_1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font_med"/>
    <RelativeLayout
        android:id="@+id/lay_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_below="@+id/junkSize">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/progress_circular"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/scan_file"/>
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/scan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanning"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_reg"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/progress_circular"/>
    </RelativeLayout>
    <TextView
        android:textSize="14sp"
        android:textColor="#8d8d8e"
        android:ellipsize="middle"
        android:id="@+id/item_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="/storage/emulated/0/Download"
        android:maxLines="1"
        android:layout_below="@+id/lay_2"
        android:fontFamily="@font/font_reg"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"/>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:layout_alignParentBottom="true">
        <include layout="@layout/native_smr"/>
    </FrameLayout>
</RelativeLayout>
