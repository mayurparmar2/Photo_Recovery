<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_bold"
            android:layout_marginStart="@dimen/_20dp"/>
        <View
            android:background="#ff1744"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_below="@+id/txtTitle"
            android:layout_marginStart="@dimen/_20dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnPrime"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/ic_prime"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_toStartOf="@+id/setting"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/setting"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/ic_settings"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_below="@+id/header"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_5dp">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:id="@+id/storage_card"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            app:cardBackgroundColor="#d1daf6"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_0dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_toStartOf="@+id/storage_prog_layout"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/lay_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3dp">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textColor="#0075db"
                            android:id="@+id/avail_storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_med"/>
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textColor="@color/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_marginRight="@dimen/_5dp"
                            android:text="of"
                            android:fontFamily="@font/font_med"
                            android:layout_marginHorizontal="@dimen/_5dp"/>
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/storage_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_med"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/lay_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_below="@+id/lay_1">
                        <TextView
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_storage"
                            android:fontFamily="@font/font_reg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:id="@+id/lay_3"
                        android:background="@drawable/bg_recovery"
                        android:paddingLeft="@dimen/_15dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingRight="@dimen/_15dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7dp"
                        android:tint="@color/white"
                        android:layout_below="@+id/lay_2"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="@dimen/_15dp"
                        android:paddingVertical="@dimen/_10dp">
                        <TextView
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/tv_recovery_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clean_now"
                            android:fontFamily="@font/font_med"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_fwrd_cln"
                            android:layout_marginStart="@dimen/_5dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/storage_prog_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_25dp"
                    android:layout_alignParentEnd="true">
                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/storage_progress"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        app:cpb_background_progressbar_color="@color/white"
                        app:cpb_background_progressbar_width="@dimen/_12dp"
                        app:cpb_progress="0"
                        app:cpb_progress_max="100"
                        app:cpb_progressbar_color="#158ef8"
                        app:cpb_progressbar_width="@dimen/_12dp"
                        app:cpb_round_border="true"
                        app:cpb_start_angle="270"/>
                    <TextView
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/black"
                        android:id="@+id/storage_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/font_bold"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5dp"
                app:cardBackgroundColor="#fbe0fb"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_rec"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:src="@drawable/ic_image"
                        android:layout_marginStart="15dp"
                        android:layout_marginVertical="@dimen/_10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/image_rec">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#f05df0"
                            android:id="@+id/vide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photos"
                            android:fontFamily="@font/font_reg"/>
                        <TextView
                            android:textSize="@dimen/_10sp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:id="@+id/videTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one_click_images_recovery"
                            android:layout_below="@+id/vide"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5dp"
                app:cardBackgroundColor="#efe1fd"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vdo_rec"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:src="@drawable/ic_video"
                        android:layout_marginStart="15dp"
                        android:layout_marginVertical="@dimen/_10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/vdo_rec">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#b87bf4"
                            android:id="@+id/vdo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/videos"
                            android:fontFamily="@font/font_reg"/>
                        <TextView
                            android:textSize="@dimen/_10sp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:id="@+id/vdoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recover_deleted_videos"
                            android:layout_below="@+id/vdo"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5dp"
                app:cardBackgroundColor="#e6fff2"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/msc_rec"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:src="@drawable/ic_audio"
                        android:layout_marginStart="15dp"
                        android:layout_marginVertical="@dimen/_10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/msc_rec">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#00b14f"
                            android:id="@+id/music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audios"
                            android:fontFamily="@font/font_reg"/>
                        <TextView
                            android:textSize="@dimen/_10sp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:id="@+id/musicTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one_click_audios_recovery"
                            android:layout_below="@+id/music"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_5dp"
                app:cardBackgroundColor="#e1f7ff"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/doc_rec"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:src="@drawable/ic_files"
                        android:layout_marginStart="15dp"
                        android:layout_marginVertical="@dimen/_10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/doc_rec">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#3dc1f1"
                            android:id="@+id/doc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/documents"
                            android:fontFamily="@font/font_reg"/>
                        <TextView
                            android:textSize="@dimen/_10sp"
                            android:textStyle="bold"
                            android:textColor="#373737"
                            android:id="@+id/docTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recover_deleted_doc"
                            android:layout_below="@+id/doc"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/cntBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                app:cardBackgroundColor="#f4f8ff"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_arrow"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        app:tint="#959494"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_duplicate"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_contact"
                        android:layout_marginStart="15dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="@dimen/_30dp"
                        android:layout_toEndOf="@+id/btn_duplicate">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#304ffe"
                            android:id="@+id/contTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:layout_marginBottom="@dimen/_2dp"
                            android:text="@string/contacts_recover"
                            android:fontFamily="@font/font_reg"
                            android:layout_marginVertical="@dimen/_2dp"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="#373737"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_contacts"
                            android:layout_below="@+id/contTxt"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_recover_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                app:cardBackgroundColor="#f8e8e8"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_0dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrow"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/right_arrow"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        app:tint="#959494"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_recycle"
                        android:layout_width="40dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_recover_file"
                        android:layout_marginStart="15dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="@dimen/_30dp"
                        android:layout_toEndOf="@+id/btn_recycle">
                        <TextView
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            android:textColor="#ff3300"
                            android:id="@+id/msc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:layout_marginBottom="@dimen/_2dp"
                            android:text="@string/recover_file"
                            android:fontFamily="@font/font_reg"
                            android:layout_marginVertical="@dimen/_2dp"/>
                        <TextView
                            android:textSize="11sp"
                            android:textColor="#373737"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all_recover_files"
                            android:layout_below="@+id/msc"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:layout_alignParentBottom="true">
        <include layout="@layout/small_native_smr"/>
    </FrameLayout>
</RelativeLayout>
