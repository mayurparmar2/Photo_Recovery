<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnClose"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:src="@drawable/ic_close"
                android:layout_marginStart="@dimen/_20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_main_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:layout_marginBottom="-120dp"
                android:src="@drawable/prime_im"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/ic_prime"/>
            <TextView
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                android:id="@+id/premium_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/get_ads_free_experience"
                android:textAllCaps="true"
                android:fontFamily="@font/font_med"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/prime_check"
                android:layout_marginEnd="@dimen/_10dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/benefit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_all_ads_forever"
                android:fontFamily="@font/font_reg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginVertical="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/prime_check"
                android:layout_marginEnd="@dimen/_10dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/benefit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recover_deleted_files"
                android:fontFamily="@font/font_reg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/prime_check"
                android:layout_marginEnd="@dimen/_10dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/benefit_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fast_amp_accurate_deep_scan"
                android:fontFamily="@font/font_reg"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icTimer"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:src="@drawable/ic_timer"
                    android:layout_marginHorizontal="@dimen/_10dp"/>
                <TextView
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/primary"
                    android:id="@+id/timerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/limited_time_offer"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/font_med"
                    android:layout_toEndOf="@+id/icTimer"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/timerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp">
                <RelativeLayout
                    android:id="@+id/hourContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/dot">
                    <TextView
                        android:textSize="@dimen/_18sp"
                        android:textColor="@color/color_red"
                        android:id="@+id/timerHours"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/font_med"/>
                    <TextView
                        android:textSize="@dimen/_10sp"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/hour"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hours"
                        android:layout_below="@+id/timerHours"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/font_reg"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/_18sp"
                    android:textColor="@color/color_red"
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:text=":"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/font_med"
                    android:layout_toStartOf="@+id/minContainer"
                    android:layout_marginHorizontal="@dimen/_5dp"/>
                <RelativeLayout
                    android:id="@+id/minContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:textSize="@dimen/_18sp"
                        android:textColor="@color/color_red"
                        android:id="@+id/timerMinutes"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/font_med"/>
                    <TextView
                        android:textSize="@dimen/_10sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/min"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minutes"
                        android:layout_below="@+id/timerMinutes"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/font_reg"/>
                </RelativeLayout>
                <TextView
                    android:textSize="@dimen/_18sp"
                    android:textColor="@color/color_red"
                    android:id="@+id/dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:text=":"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/font_med"
                    android:layout_toEndOf="@+id/minContainer"
                    android:layout_marginHorizontal="@dimen/_5dp"/>
                <RelativeLayout
                    android:id="@+id/secContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dot1">
                    <TextView
                        android:textSize="@dimen/_18sp"
                        android:textColor="@color/color_red"
                        android:id="@+id/timerSeconds"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/font_med"/>
                    <TextView
                        android:textSize="@dimen/_10sp"
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/sec"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seconds"
                        android:layout_below="@+id/timerSeconds"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/font_reg"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/_25sp"
            android:textColor="@color/yellow"
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/font_bold"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/_18sp"
        android:textColor="@color/white"
        android:id="@+id/subscribe_now"
        android:padding="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_60dp"
        android:text="@string/subscribe_now"
        android:backgroundTint="@color/primary"
        android:layout_marginHorizontal="@dimen/_60dp"/>
    <TextView
        android:textSize="@dimen/_14sp"
        android:textColor="@color/grey"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:text="@string/pay_once_enjoy_an_ad_free_experience_forever"
        android:fontFamily="@font/font_reg"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_20dp"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp">
        <TextView
            android:textSize="@dimen/_12sp"
            android:textColor="@color/text_color"
            android:id="@+id/terms_of_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/term_of_service"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_reg"
            android:layout_toStartOf="@+id/view"/>
        <View
            android:layout_gravity="center_horizontal"
            android:id="@+id/view"
            android:background="@drawable/img_line"
            android:layout_width="@dimen/_1dp"
            android:layout_height="@dimen/_23dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_10dp"/>
        <TextView
            android:textSize="@dimen/_12sp"
            android:textColor="@color/text_color"
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_reg"
            android:layout_toEndOf="@+id/view"/>
    </RelativeLayout>
</LinearLayout>
