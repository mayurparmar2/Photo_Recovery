<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_grid"
    android:paddingTop="@dimen/_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_250dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exitLayout"
        android:paddingTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16dp"
            android:layout_marginRight="@dimen/_16dp">
            <ImageView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:src="@drawable/img_rate"
                android:contentDescription="@null"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_20sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_experience"
                    android:singleLine="true"
                    app:fontFamily="@font/font_bold"/>
                <TextView
                    android:textColor="@color/preview_status_bar"
                    android:paddingTop="@dimen/_14dp"
                    android:paddingBottom="@dimen/_14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_txt"
                    android:letterSpacing="0.01"
                    app:fontFamily="@font/font_bold"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginVertical="20dp">
                    <com.gcs.recovery.videos.files.photo_recovery.CustomRatingBar
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="1.5"
                        android:stepSize="0.5"
                        android:isIndicator="false"
                        android:secondaryProgressTint="#00000000"
                        style="@style/CustomRatingBar"/>
                </FrameLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp">
                    <com.google.android.material.button.MaterialButton
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/rateBtn"
                        android:paddingLeft="@dimen/_30dp"
                        android:paddingTop="@dimen/_15dp"
                        android:paddingRight="@dimen/_30dp"
                        android:paddingBottom="@dimen/_15dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_now"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_bold"
                        app:backgroundTint="#ff1d32fe"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
