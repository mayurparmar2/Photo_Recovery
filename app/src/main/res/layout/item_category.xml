<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/_16sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/font_bold"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_alignParentStart="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expandCollapseIcon"
        android:visibility="gone"
        android:layout_width="@dimen/_24dp"
        android:layout_height="@dimen/_24dp"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:rotation="90"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_toEndOf="@+id/categoryName"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/expandUnCollapseIcon"
        android:visibility="visible"
        android:layout_width="@dimen/_24dp"
        android:layout_height="@dimen/_24dp"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_toEndOf="@+id/categoryName"/>
    <TextView
        android:textSize="@dimen/_14sp"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/categorySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/font_med"
        android:layout_toStartOf="@+id/categoryCheckBox"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/categoryCheckBox"
        android:visibility="visible"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/ic_dslct"
        android:tint="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
