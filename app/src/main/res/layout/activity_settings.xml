<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_alignParentStart="true"
            app:tint="@color/black"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_reg"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_toEndOf="@+id/ic_back"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btnPrime"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:paddingHorizontal="@dimen/_10dp">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:id="@+id/btn_recover_file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                app:cardBackgroundColor="#ff1d32fe"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_recycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12dp"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:src="@drawable/ic_prime"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginVertical="@dimen/_12dp"/>
                    <RelativeLayout
                        android:id="@+id/txt_prime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_toEndOf="@+id/btn_recycle">
                        <TextView
                            android:textSize="@dimen/_14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:id="@+id/msc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:layout_marginBottom="@dimen/_2dp"
                            android:text="@string/get_ads_free_experience"
                            android:fontFamily="@font/font_reg"
                            android:layout_marginVertical="@dimen/_2dp"/>
                        <TextView
                            android:textSize="@dimen/_10sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/remove_all_ads_forever"
                            android:layout_below="@+id/msc"
                            android:fontFamily="@font/font_reg"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/bg_recovery"
                        android:paddingLeft="@dimen/_15dp"
                        android:paddingTop="@dimen/_10dp"
                        android:paddingRight="@dimen/_15dp"
                        android:paddingBottom="@dimen/_10dp"
                        android:layout_width="@dimen/_90dp"
                        android:layout_height="wrap_content"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="@dimen/_15dp"
                        android:paddingVertical="@dimen/_10dp">
                        <TextView
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/tv_recovery_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buy_now"
                            android:fontFamily="@font/font_med"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ivLanguage"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/btnPrime"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icLanguage"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_lang"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/language"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/icLanguage"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#6e7fe0"
                android:id="@+id/selectedLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_toStartOf="@+id/arrow"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rateUs"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/ivLanguage"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_rate"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/rate_us"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/item_image"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shareApp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/rateUs"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/share_image"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_share"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/share_app"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/share_image"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/shareApp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/feedback_image"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_feed"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/feedback_amp_suggestions"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/feedback_image"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/moreApp"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/feedback"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_more"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_more_app"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/our_more_app"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/ic_more"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/moreApp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/privacy_image"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_privacy"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12dp"
                android:text="@string/privacy_policy"
                android:layout_centerVertical="true"
                android:fontFamily="@font/font_reg"
                android:layout_marginEnd="@dimen/_30dp"
                android:layout_toEndOf="@+id/privacy_image"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                app:tint="#bababa"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:textColor="#bababa"
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/font_med"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
