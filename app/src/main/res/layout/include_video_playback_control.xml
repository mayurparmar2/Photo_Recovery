<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/bottom_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/off_black"
                android:paddingLeft="@dimen/_5dp"
                android:paddingTop="@dimen/_10dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_5dp">
                <TextView
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/exo_position"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/font_med"/>
                <SeekBar
                    android:id="@+id/video_progress"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    android:focusable="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/_5dp"
                    android:progressDrawable="@drawable/bg_audio_preview_progress"
                    android:minHeight="@dimen/_5dp"
                    android:thumb="@drawable/ic_audio_cursor"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"/>
                <TextView
                    android:textSize="@dimen/_12sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/exo_duration"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/font_med"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/off_black"
                android:paddingBottom="@dimen/_30dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:gravity="center"
                    android:id="@+id/exo_rew"
                    android:padding="@dimen/_10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rewind"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:gravity="center"
                    android:id="@+id/exo_play"
                    android:padding="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:gravity="center"
                    android:id="@+id/exo_pause"
                    android:padding="@dimen/_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pause"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:gravity="center"
                    android:id="@+id/exo_ffwd"
                    android:padding="@dimen/_10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/forward"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
