<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ads_bg_color"
    android:padding="@dimen/_5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_50dp">
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:layout_marginBottom="@dimen/_8dp"/>
        <RelativeLayout
            android:id="@+id/ad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ad_app_icon">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginStart="@dimen/_5dp"
                        style="@style/Theme.AdsDemo.AdAttribution"/>
                    <TextView
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:id="@+id/ad_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:fontFamily="@font/font_reg"
                        android:layout_marginStart="@dimen/_8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:layout_marginStart="@dimen/_5dp">
                    <TextView
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="bottom"
                        android:id="@+id/ad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <RatingBar
                        android:id="@+id/ad_stars"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        style="?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>
                <TextView
                    android:textSize="@dimen/_12sp"
                    android:textColor="@android:color/darker_gray"
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/font_reg"
                    android:layout_marginStart="@dimen/_5dp"/>
            </LinearLayout>
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:textSize="@dimen/_16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/ad_call_to_action"
            android:paddingLeft="@dimen/_20dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingRight="@dimen/_20dp"
            android:paddingBottom="@dimen/_2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textAllCaps="false"
            android:fontFamily="@font/font_med"
            android:backgroundTint="@color/primary"/>
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
