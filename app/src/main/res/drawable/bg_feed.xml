<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="16dp"/>
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <size
                android:height="0dp"
                android:width="0dp"/>
            <gradient
                android:startColor="#11000000"
                android:endColor="#33000000"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/gray"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
