<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/header"
        android:background="@drawable/view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_back"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:src="@drawable/ic_back"
                android:layout_marginStart="@dimen/_20dp"
                app:tint="@color/black"/>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recovered_files"
                android:fontFamily="@font/font_reg"
                android:layout_marginStart="@dimen/_20dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_selection"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:gravity="start|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_back_btn"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/ic_back"
                    android:layout_marginStart="@dimen/_20dp"
                    app:tint="@color/black"/>
                <TextView
                    android:textSize="@dimen/_18sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/selected_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Select (01)"
                    android:fontFamily="@font/font_med"
                    android:layout_marginStart="@dimen/_10dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_share"
                    android:layout_width="@dimen/_35dp"
                    android:layout_height="@dimen/_35dp"
                    android:src="@drawable/ic_preview_share"
                    android:tint="#ff1cc440"
                    android:layout_marginEnd="@dimen/_20dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_delete"
                    android:layout_width="@dimen/_27dp"
                    android:layout_height="@dimen/_27dp"
                    android:src="@drawable/ic_delete"
                    android:layout_marginEnd="@dimen/_20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/color_red"
            app:tabIndicatorFullWidth="true"
            app:tabMode="auto"
            app:tabSelectedTextColor="@color/primary"
            app:tabTextAppearance="@style/CustomTabTextStyle"/>
        <LinearLayout
            android:id="@+id/selection_layout"
            android:paddingTop="12.5dp"
            android:paddingBottom="12.5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingVertical="12.5dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_select_all"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:src="@drawable/ic_dslct"
                android:layout_marginStart="@dimen/_40dp"/>
            <TextView
                android:textSize="@dimen/_18sp"
                android:textColor="@color/text_color"
                android:id="@+id/all_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Select"
                android:fontFamily="@font/font_med"
                android:layout_marginStart="@dimen/_10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.gcs.recovery.videos.files.photo_recovery.NonSwipeableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frameLayout"
        android:layout_below="@+id/bottom_layout"/>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bnr_native_smr"/>
    </FrameLayout>
</RelativeLayout>
