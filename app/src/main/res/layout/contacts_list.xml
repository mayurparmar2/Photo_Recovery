<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:gravity="start|center_vertical"
                android:id="@+id/noOfContLayout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/noOfCont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_med"
                    android:layout_marginStart="@dimen/_20dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icSearch"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_search"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/searchLayout"
                android:background="@drawable/bg_rec_stroke"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/gray"
                android:layout_marginHorizontal="@dimen/_20dp">
                <androidx.appcompat.widget.AppCompatEditText
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:id="@+id/searchBar"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:hint="Search Contact"
                    android:cursorVisible="false"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/font_reg"
                    android:textAlignment="textStart"
                    android:layout_marginStart="@dimen/_15dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_cancel"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:visibility="visible"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_below="@+id/headerLayout"
            android:paddingHorizontal="@dimen/_5dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_error"
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="260dp"
            android:layout_marginTop="@dimen/_100dp"
            android:src="@drawable/ic_no_data"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/ivBackupBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_80dp"
        android:layout_marginRight="@dimen/_80dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_80dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_recovery"
            android:paddingTop="@dimen/_13dp"
            android:paddingBottom="@dimen/_13dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icBackup"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/_6dp"
                app:srcCompat="@drawable/ic_backup"/>
            <TextView
                android:textSize="@dimen/_16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_all_contacts"
                android:fontFamily="@font/font_med"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
